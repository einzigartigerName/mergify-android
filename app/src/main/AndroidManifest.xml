<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.dechasa.mergify">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mergify"
        tools:ignore="AllowBackup">
        <activity
            android:name=".ui.layout.LoginActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.layout.MainActivity"
            android:label="@string/title_main"/>

        <activity
            android:name=".ui.layout.TracksActivity"
            android:label="@string/title_tracks"/>
    </application>

</manifest>